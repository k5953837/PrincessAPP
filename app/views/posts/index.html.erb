<%= simple_form_for @post do |f| %>
  <div class="post_wrapper">
    <div class="jumbotron">
      <div class="container">
        <h1> New Post </h1>
        <div class="group">
          <%= f.input :title %>
        </div>

        <div class="group">
          <%= f.input :content %>
        </div>

        <%= f.button :submit, data: {disable_with: "Submit..."} %>
      </div>
    </div>
  </div>
<% end %>

<% @posts.each do |post| %>
  <div class="post_wrapper">
    <div class="jumbotron">
      <div class="container">
        <h2 class="title"><%= link_to post.title, post %></h2>
        <p class="content"><%= post.content %></p>
        <h2>
          <small>
          <span class="glyphicon glyphicon-ok-circle"></span>
          No matter the ending is perfect or not, you cannot disappear from my world. - Kitb
          </small>
        </h2>
        <!-- <p><small>Best Regards, Johnson</small></p> -->
        <p class="date">
          <small>
            <span class="glyphicon glyphicon-time"></span>
            <%= post.created_at.strftime("%I:%M %p, %B %d, %Y") %>
          </small>
        </p>
        <% if current_user %> <!-- if user not log in -->
          <span class="glyphicon glyphicon-edit"></span>
          <%= link_to 'Edit', edit_post_path(post.id) %> |
          <span class="glyphicon glyphicon-trash"></span>
          <%= link_to 'Delete', post_path(post.id), method: :delete, data: {confirm: 'Are you sure?' } %> |
        <% end %>
        <span class="glyphicon glyphicon-comment"> </span>
        <%= link_to post.comments.count , post_path(post.id)%>
        <strong>comments</strong>
      </div>
    </div>
  </div>
<% end %>


